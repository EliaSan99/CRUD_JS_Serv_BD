<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Alumnos</title>
    <link rel="stylesheet" href="../css/Alms.css">
</head>

<body>
    <div class="wrapper">
        <p><a id="p1" class="btn btn-secondary" href="/alumnos/nuevo">Nuevo Registro</a></p>
        <p><a id="p2" class="btn btn-secondary" href="/">Ir a vista principal</a></p>

    </div>


    <div class="container">
        <div class="row justify-content-center">
            <div class="col-auto m-1">
                <table class="table table-bordered table-hover table-dark">
                    <thead>
                        <tr>
                            <th>Matricula</th>
                            <th>Nombre Completo</th>
                            <th>DDI</th>
                            <th>DWI</th>
                            <th>ECBD</th>
                            <th>Promedio</th>
                            <th colspan="2">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                           for(var i=0; i<data.length; i++)
                           {
                            var prom = (data[i].Ddi+data[i].Dwi+data[i].Ecbd)/3.0;
                            prom = prom.toFixed(1);
                           
                        %>
                        <tr>
                            <td><%=data[i].Matricula%></td>
                            <td><%=data[i].Nombre%> <%=data[i].Apellidos%></td>
                            <td><%=data[i].Ddi%></td>
                            <td><%=data[i].Dwi%></td>
                            <td><%=data[i].Ecbd%></td>
                            <td><%=prom%></td>
                            <td><a class="btn btn-warning" href="/alumnos/editar/<%=data[i].Matricula%>">Editar</a></td>
                            <td><a class="btn btn-danger" href="/alumnos/eliminar/<%=data[i].Matricula%>">Eliminar</a></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>  

</body>

</html>

